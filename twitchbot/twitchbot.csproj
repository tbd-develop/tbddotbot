<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>netcoreapp2.2</TargetFramework>
        <LangVersion>7.3</LangVersion>
        <OutputType>Exe</OutputType>
        <StartupObject>twitchbot.Program</StartupObject>
    </PropertyGroup>

    <ItemGroup>
      <None Remove="definitions.json" />
      <Content Include="definitions.json">
        <CopyToOutputDirectory>Always</CopyToOutputDirectory>
      </Content>
      <None Remove="auth.json" />
      <Content Include="auth.json">
        <CopyToOutputDirectory>Always</CopyToOutputDirectory>
      </Content>
    </ItemGroup>

    <ItemGroup>
      <ProjectReference Include="..\twitchstreambot\twitchstreambot.csproj" />
    </ItemGroup>

    <ItemGroup>
      <PackageReference Include="Newtonsoft.Json" Version="12.0.2" />
      <PackageReference Include="Topshelf" Version="4.2.0" />
    </ItemGroup>

</Project>
